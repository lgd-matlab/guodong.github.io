{
  "name": "academic-pages",
  "version": "0.8.1.1",
  "description": "Academic Pages Mistakes Jekyll theme npm build scripts",
  "repository": {
    "type": "git",
    "url": "https://github.com/academicpages/academicpages.github.io"
  },
  "keywords": [
    "jekyll",
    "theme",
    "minimal"
  ],
  "contributors": [
    "Michael Rose",
    "Robert Zupko"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/academicpages/academicpages.github.io/issues"
  },
  "homepage": "https://github.com/academicpages/academicpages.github.io",
  "engines": {
    "node": ">= 0.10.0"
  },
  "dependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react-swc": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "fitvids": "^2.1.1",
    "jquery": "^3.7.1",
    "jquery-smooth-scroll": "^2.2.0",
    "lovable-tagger": "^1.1.11",
    "lucide-react": "^0.548.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.4",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@tanstack/react-query": "^4.42.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.9.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^15.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "onchange": "^7.1.0",
    "prettier": "^3.6.2",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "uglify-js": "^3.17.4",
    "vite": "^4.5.14"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "uglify": "uglifyjs node_modules/jquery/dist/jquery.min.js node_modules/fitvids/dist/fitvids.min.js node_modules/jquery-smooth-scroll/jquery.smooth-scroll.min.js assets/js/plugins/jquery.greedy-navigation.js assets/js/_main.js -c -m -o assets/js/main.min.js",
    "watch:js": "onchange \"assets/js/**/*.js\" -e \"assets/js/main.min.js\" -- npm run build:js",
    "build:js": "npm run uglify",
    "build:react": "vite build",
    "build:all": "npm run build:react && npm run build:js",
    "watch:react": "vite build --watch",
    "dev:jekyll": "npm run watch:react & npm run watch:js & bundle exec jekyll serve",
    "serve": "bundle exec jekyll serve",
    "test:react": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{js,jsx}",
    "lint:fix": "eslint src/**/*.{js,jsx} --fix",
    "format": "prettier --write src/**/*.{js,jsx,css,md}",
    "type-check": "tsc --noEmit"
  }
}
