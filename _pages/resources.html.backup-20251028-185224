<script>
  (function(){
    // Wait for DOM to be fully loaded
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initGitHubRepos);
    } else {
      initGitHubRepos();
    }

    function initGitHubRepos() {
      let container = document.querySelector('.repo-grid');

      // If container doesn't exist, create it after the "GitHub Projects" heading
      if (!container) {
        // Find the GitHub Projects heading by looking for h2 with that text
        const headings = Array.from(document.querySelectorAll('h2'));
        const githubHeading = headings.find(h => h.textContent.trim() === 'GitHub Projects');

        if (githubHeading) {
          container = document.createElement('div');
          container.className = 'repo-grid';
          githubHeading.insertAdjacentElement('afterend', container);
        } else {
          console.warn('GitHub Projects heading not found');
          return;
        }
      }

      // If repos are already rendered by Jekyll, don't fetch
      if (container.querySelector('.repo-card')) {
        console.log('GitHub repos already rendered by Jekyll');
        return;
      }

      const user = '{{ site.author.github | escape }}';
      if (!user) {
        console.warn('GitHub username not configured');
        return;
      }

      // Show loading indicator
      const loadingMsg = document.createElement('p');
      loadingMsg.id = 'gh-loading';
      loadingMsg.style.cssText = 'text-align: center; color: #666; padding: 20px;';
      loadingMsg.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Loading repositories...';
      container.appendChild(loadingMsg);

      // Fetch repositories from GitHub API
      fetch(`https://api.github.com/users/${user}/repos?per_page=100&sort=updated`, {
        headers: { 'Accept': 'application/vnd.github+json' }
      })
        .then(response => {
          if (!response.ok) {
            throw new Error(`GitHub API error: ${response.status}`);
          }
          return response.json();
        })
        .then(repos => {
          // Remove loading indicator
          const loading = document.getElementById('gh-loading');
          if (loading) loading.remove();

          if (!Array.isArray(repos) || repos.length === 0) {
            container.innerHTML = '<p style="text-align: center; color: #666;">No repositories found.</p>';
            return;
          }

          // Sort by stars and render
          repos
            .sort((a,b) => (b.stargazers_count||0) - (a.stargazers_count||0))
            .forEach(repo => {
              const badges = [];
              if (repo.fork) badges.push('<span class="badge">Fork</span>');
              if (repo.is_template) badges.push('<span class="badge">Template</span>');
              if (repo.has_pages) badges.push('<span class="badge">Pages</span>');
              if (repo.archived) badges.push('<span class="badge badge--archived">Archived</span>');

              const art = document.createElement('article');
              art.className = 'repo-card';
              art.innerHTML = `
                <header class="repo-card__head">
                  <h3 class="repo-card__title">
                    <a href="${repo.html_url}" target="_blank" rel="noopener"><strong>${repo.owner?.login || user}</strong>/<strong>${repo.name}</strong></a>
                  </h3>
                  <div class="repo-card__badges">${badges.join('')}</div>
                </header>
                ${repo.description ? `<p class="repo-card__desc">${repo.description}</p>` : ''}
                <div class="repo-card__meta">
                  ${repo.language ? `<span class="meta__item"><span class="lang-dot"></span> ${repo.language}</span>` : ''}
                  <span class="meta__item"><i class="fa fa-star"></i> ${repo.stargazers_count||0}</span>
                  <span class="meta__item"><i class="fa fa-code-fork"></i> ${repo.forks_count||0}</span>
                  <span class="meta__item"><i class="fa fa-refresh"></i> ${new Date(repo.pushed_at).toISOString().slice(0,10)}</span>
                </div>`;
              container.appendChild(art);
            });

          // Remove the fallback message if repos were loaded
          const msg = document.getElementById('gh-meta-msg');
          if (msg) msg.remove();

          console.log(`Successfully loaded ${repos.length} repositories`);
        })
        .catch(error => {
          console.error('Failed to load GitHub repositories:', error);
          const loading = document.getElementById('gh-loading');
          if (loading) loading.remove();

          // Show error message
          container.innerHTML = `
            <p style="text-align: center; color: #666; padding: 20px;">
              Failed to load repositories.
              <a href="https://github.com/${user}" target="_blank" rel="noopener" style="color: #1e6bb8;">
                View on GitHub <i class="fa fa-external-link"></i>
              </a>
            </p>`;
        });
    }
  })();
</script>
